<UserControl
    x:Class="QuizApp.Views.MenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:QuizApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuizApp.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <!--BOARDER RUNT MENY-->
        <Border
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="WhiteSmoke"
            CornerRadius="20">

            <StackPanel VerticalAlignment="Center">
                <!--SPELA KNAPP-->
                <Button x:Name="PlayCommand" Content="Play" />
                <!--EDIT KNAPP-->
                <Button x:Name="EditCommand" Content="Edit Quiz" />
                <!--SKAPA KNAPP-->
                <Button x:Name="CreateCommand" Content="Create Quiz" />

            </StackPanel>

        </Border>

    </Grid>
</UserControl>
